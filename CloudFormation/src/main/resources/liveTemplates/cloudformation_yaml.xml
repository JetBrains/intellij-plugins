<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="AWS CloudFormation (YAML)">

  <template name="ref" value='!Ref $VAL$'
            resource-bundle="com.intellij.aws.cloudformation.CloudFormationBundle" key="livetemplate.description.ref">
    <variable name="VAL" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="AWS_CLOUD_FORMATION_YAML" value="true" />
    </context>
  </template>

  <template name="param" value="$NAME$:&#10;  Type: $TYPE$&#10;"
            description="Inserts a parameter" toReformat="true" toShortenFQNames="false">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TYPE" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="AWS_CLOUD_FORMATION_YAML" value="true" />
    </context>
  </template>

</templateSet>