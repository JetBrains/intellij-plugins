              "/usr/local/bin/get_cluster_config" : {
                "content" : { "Fn::Join" : ["", [
                  "#! /bin/bash\n",
                  "aws elasticache describe-cache-clusters ",
                  "         --cache-cluster-id ", {"Ref" : "RedisCluster"},
