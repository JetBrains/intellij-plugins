      "ap-southeast-2"   : {"Windows2008r2" : "ami-01d0a8d5f9671d888", "Windows2012r2" : "ami-0664c039c4dea5193"},
      "ap-south-1"       : {"Windows2008r2" : "ami-0131b74fc8bfa2b67", "Windows2012r2" : "ami-0bd1dc65d74266ee2"},
