<idea-plugin version="2">
  <id>com.github.masahirosuzuka.PhoneGapIntelliJPlugin</id>
  <name>PhoneGap Plugin</name>
  <version>0.3</version>
  <vendor email="masahiro.suzuka@gmail.com" url="http://github.com/masahirosuzuka/PhoneGapIntelliJPlugin">masahirosuzuka</vendor>

  <description><![CDATA[
        <h4>PhoneGap integration for InteliJ Platform.<h4>
        <p>See README.md</p>
        <a href="https://github.com/masahirosuzuka/phonegap-intelliJ-plugin">masahirsuzuka/PhoneGapIntelliJPlugin</a>
    ]]></description>

  <change-notes><![CDATA[
      <p>v0.3 Project Generator</p>
      <p>v0.2 Project Import</p>
      <p>v0.1 RunConfigure</p>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <!-- Project generator -->
    <moduleType id="PHONEGAP_MODULE" implementationClass="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.PhoneGapModuleType" />
    <moduleConfigurationEditorProvider implementation="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.PhoneGapModuleEditorProvider" />

    <!-- Project importer -->
    <projectImportProvider implementation="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.ProjectImport.PhoneGapProjectImportProvider" />
    <projectImportBuilder implementation="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.ProjectImport.PhoneGapProjectImportBuilder" />

    <!-- Project runner -->
    <configurationType implementation="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.runner.PhoneGapConfigurationType" />
    <programRunner implementation="com.github.masahirosuzuka.PhoneGapIntelliJPlugin.runner.PhoneGapRunner" />
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
