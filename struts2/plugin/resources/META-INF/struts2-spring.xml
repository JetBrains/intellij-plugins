<idea-plugin package="com.intellij.struts2.spring">
  <extensions defaultExtensionNs="com.intellij">
    <!-- resolve <constant> "value" to Spring bean definition -->
    <struts2.constantValueClassContributor
      implementation="com.intellij.struts2.spring.ConstantValueConverterSpringClassContributor"/>

    <!-- resolve "class" to Spring bean definition -->
    <struts2.classContributor implementation="com.intellij.struts2.spring.ExtendableClassConverterSpringContributor"/>
  </extensions>
</idea-plugin>