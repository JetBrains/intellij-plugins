<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<!-- with Spring support enabled -->
<struts>

  <!-- Actions via Spring beans -->
  <package name="springBeansPackage">

    <action name="testSpringBean1" class="bean1" method="validActionMethod"/>
    <action name="testSpringBeanInvalidMethod" class="bean1" method="<error>INVALID_VALUE</error>"/>
    <action name="testSpringBean1Alias" class="bean1Alias" method="validActionMethod"/>

    <action name="testSpringBean2" class="bean2"/>

    <action name="notExistingSpringBeanOrClass" class="<error>bean999</error>"/>

  </package>


  <!-- Actions via normal JAVA classes -->
  <package name="noSpring">

    <action name="noSpring" class="MyClass" method="validActionMethod"/>
    <action name="noSpringInvalidActionMethod" class="MyClass" method="<error>INVALID_VALUE</error>"/>

    <action name="interfaceNotAllowed" class='<error descr="Interface not allowed">MyInterface</error>'/>
    <action name="abstractClassNotAllowed" class='<error descr="Abstract class is not allowed">MyAbstractClass</error>'/>

  </package>

</struts>