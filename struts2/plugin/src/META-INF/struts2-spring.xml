<?xml version="1.0" encoding="UTF-8"?>

<idea-plugin version="2">

  <extensions defaultExtensionNs="com.intellij">

    <!-- resolve <constant> "value" to Spring bean definition -->
    <struts2.constantValueClassContributor
            implementation="com.intellij.struts2.dom.struts.constant.ConstantValueConverterSpringClassContributor"/>

    <!-- resolve "class" to Spring bean definition -->
    <struts2.classContributor
            implementation="com.intellij.struts2.dom.struts.impl.ExtendableClassConverterSpringContributor"/>
  </extensions>

</idea-plugin>